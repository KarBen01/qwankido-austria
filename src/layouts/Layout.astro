---
import Header from '../components/Header.jsx';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de">
<head>
    <meta charset="UTF-8" />
    <meta name="description" content="Qwan Ki Do Österreich - Sino-Vietnamesische Kampfkunst" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Qwan Ki Do Austria</title>

    <!-- Facebook SDK -->
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous"
        src="https://connect.facebook.net/de_DE/sdk.js#xfbml=1&version=v18.0">
    </script>
</head>
<body class="bg-white text-slate-800 font-sans min-h-screen flex flex-col">
<!--
    client:load ist wichtig, damit React im Browser geladen wird
    und das Mobile-Menü funktioniert.
-->
<Header client:load />

<main class="flex-grow pt-20">
    <!-- slot ist der Platzhalter für den Inhalt der jeweiligen Seite -->
    <slot />
</main>

<Footer />
</body>
</html>